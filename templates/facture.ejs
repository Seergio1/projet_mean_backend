<body>
   <div class="container">
    <div class="header">
      <img src="data:image/png;base64,<%= logoBase64 %>" alt="Logo" width="100">
      <div class="facture-info">
        <p>Facture n° <%= facture._id %>
        </p>
        <p>Date : <%= new Date().toLocaleDateString('fr-FR') %>
        </p>
      </div>
    </div>

    <h3>Informations du client</h3>
    <p>Nom : <%= facture.id_client.nom %>
    </p>
    <p>Email : <%= facture.id_client.email %>
    </p>
    <p>Contact : <%= facture.id_client.contact %>
    </p>

    <h3>Informations du véhicule</h3>
    <p>Modèle : <%= facture.id_vehicule.modele %>
    </p>
    <p>Numéro : <%= facture.id_vehicule.numero %>
    </p>

    <h3>Services</h3>
    <table>
      <thead>
        <tr>
          <th>Référence</th>
          <th>Durée</th>
          <th>Prix</th>
        </tr>
      </thead>
      <tbody>
        <% facture.services.forEach((service)=> { %>
          <tr>
            <td>
              <%= service.nom %>
            </td>
            <td>
              <%= service.duree %> min
            </td>
            <td class="right">
              <%= service.prix.toLocaleString('fr-FR') %> MGA
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <h3>Articles</h3>
    <table>
      <thead>
        <tr>
          <th>Article</th>
          <th>Qté</th>
          <th>Prix Unitaire</th>
          <th>Total</th>
        </tr>
      </thead>
      <tbody>
        <% facture.articles.forEach((a)=> { %>
          <tr>
            <td>
              <%= a.id_article.nom %>
            </td>
            <td>
              <%= a.nbr_article %>
            </td>
            <td class="right">
              <%= a.id_article.prix.toLocaleString('fr-FR') %> MGA
            </td>
            <td class="right">
              <%= (a.id_article.prix * a.nbr_article).toLocaleString('fr-FR') %> MGA
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>

    <!-- TOTAL -->
    <div class="total">
      <div class="total-row">
        <span class="label">Total des services :</span>
        <span class="amount">
          <%= totalService.toLocaleString('fr-FR') %> MGA
        </span>
      </div>
      <div class="total-row">
        <span class="label">Total des articles :</span>
        <span class="amount">
          <%= totalArticles.toLocaleString('fr-FR') %> MGA
        </span>
      </div>
      <div class="total-row total-bold">
        <span class="label">Total à payer :</span>
        <span class="amount">
          <%= totalGlobal.toLocaleString('fr-FR') %> MGA
        </span>
      </div>
    </div>

    <div class="signatures">
      <div class="signature">Signature du client</div>
      <div class="signature">Signature de la société</div>
    </div>
  </div>
</body>

