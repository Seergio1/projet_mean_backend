<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Facture</title>
  <style>
    body { font-family: 'Arial', sans-serif; background-color: #f8f8f8; padding: 20px; }
    .container { max-width: 800px; background: #fff; margin: auto; padding: 30px; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; }
    .header img { width: 100px; }
    .facture-info { text-align: right; font-size: 14px; }
    h1 { text-align: center; font-weight: bold; margin-bottom: 20px; }
    h3 { border-bottom: 2px solid #000; padding-bottom: 5px; margin-top: 30px; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #ddd; padding: 12px; text-align: left; }
    th { background-color: #f2f2f2; }
    .right { text-align: right; }
    .total { font-weight: bold; font-size: 18px; margin-top: 30px; text-align: right; }
    .footer { margin-top: 50px; text-align: center; font-size: 14px; color: #555; }
    .signatures { display: flex; justify-content: space-between; margin-top: 50px; }
    .signature { width: 45%; text-align: center; border-top: 1px solid #000; padding-top: 10px; padding-bottom: 30px; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <img src="logo.png" alt="Logo Société">
      <div class="facture-info">
        <p>Facture n° <%= facture._id %></p>
        <p>Date : <%= new Date().toLocaleDateString('fr-FR') %></p>
      </div>
    </div>

    <h1>FACTURE</h1>

    <h3>Informations du client</h3>
    <p>Nom : <%= facture.id_client.nom %></p>
    <p>Email : <%= facture.id_client.email %></p>
    <p>Contact : <%= facture.id_client.contact %></p>
    <p>ID Client : <%= facture.id_client._id %></p>

    <h3>Informations du véhicule</h3>
    <p>Modèle : <%= facture.id_vehicule.modele %></p>
    <p>Numéro : <%= facture.id_vehicule.numero %></p>

    <h3>Services</h3>
    <table>
      <thead>
        <tr><th>#</th><th>Nom</th><th>Durée</th><th>Prix</th></tr>
      </thead>
      <tbody>
        <% facture.services.forEach((service, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= service.nom %></td>
            <td><%= service.duree %> min</td>
            <td class="right"><%= service.prix.toLocaleString('fr-FR') %> MGA</td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h3>Articles</h3>
    <table>
      <thead>
        <tr><th>#</th><th>Article</th><th>Qté</th><th>Prix Unitaire</th><th>Total</th></tr>
      </thead>
      <tbody>
        <% facture.articles.forEach((a, i) => { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= a.id_article.nom %></td>
            <td><%= a.nbr_article %></td>
            <td class="right"><%= a.id_article.prix.toLocaleString('fr-FR') %> MGA</td>
            <td class="right"><%= (a.id_article.prix * a.nbr_article).toLocaleString('fr-FR') %> MGA</td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="total">
      <p>Total des services : <%= totalService.toLocaleString('fr-FR') %> MGA</p>
      <p>Total des articles : <%= totalArticles.toLocaleString('fr-FR') %> MGA</p>
      <p><strong>Total à payer : <%= totalGlobal.toLocaleString('fr-FR') %> MGA</strong></p>
    </div>

    <div class="signatures">
      <div class="signature">Signature du client</div>
      <div class="signature">Signature de la société</div>
    </div>

    <div class="footer">
      <p>MERCi DE VOTRE CONFIANCE</p>
    </div>
  </div>
</body>
</html>
